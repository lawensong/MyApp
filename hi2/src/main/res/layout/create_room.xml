<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="聊天室名字"
            android:id="@+id/textView"
            android:layout_marginTop="102dp" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="34dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText2" android:layout_alignBottom="@+id/textView"
            android:layout_toRightOf="@+id/textView" android:layout_toEndOf="@+id/textView"
            android:layout_marginLeft="49dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="描述"
            android:id="@+id/textView2" android:layout_below="@+id/textView" android:layout_toLeftOf="@+id/editText2"
            android:layout_toStartOf="@+id/editText2" android:layout_marginTop="74dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText3" android:layout_alignBottom="@+id/textView2"
            android:layout_alignLeft="@+id/editText2" android:layout_alignStart="@+id/editText2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="最大人数"
            android:id="@+id/textView3" android:layout_below="@+id/textView2" android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2" android:layout_marginTop="68dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText4" android:layout_alignBottom="@+id/textView3"
            android:layout_alignLeft="@+id/editText3" android:layout_alignStart="@+id/editText3"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建"
            android:id="@+id/button" android:layout_alignParentBottom="true" android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" android:layout_marginBottom="81dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:id="@+id/button2" android:layout_alignBottom="@+id/button" android:layout_alignLeft="@+id/editText4"
            android:layout_alignStart="@+id/editText4"/>
</RelativeLayout>